<mvc:View
	controllerName="be.ap.product.controller.Detail"
    xmlns="sap.uxap"
	xmlns:m="sap.m"
    xmlns:f="sap.f"
	xmlns:semantic="sap.f.semantic"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:form="sap.ui.layout.form">

	<ObjectPageLayout id="detailPage"
					 showTitleInHeaderContent="true"
					alwaysShowContentHeader="false"
					preserveHeaderStateOnScroll="false"
					headerContentPinnable="false"
					isChildPage="true"
					upperCaseAnchorBar="false"
                    showFooter="true">
                    
				<headerTitle>
                    <ObjectPageHeader>
                        <m:Title text="Product details" wrapping="true" class="sapUiSmallMarginEnd" titleStyle="H3"/>
                    </ObjectPageHeader>
				</headerTitle>

				<headerContent>
					<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Stretch">
                    <m:HBox>
                    		<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
							    <m:Text text="{ProductId}"/>
					            <f:Avatar
                                    src="{i18n>url}"
                                    displaySize="XL"
                                    displayShape="Square"
                                    press="onPress"
                                    fallbackIcon="sap-icon://product"/>
                            </m:VBox>
                            <m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
                            <m:Title text="{Name}" wrapping="true" class="sapUiSmallMarginEnd" titleStyle="H3"/>
                            <m:Title text="{Price}" wrapping="true" class="sapUiSmallMarginEnd" titleStyle="H4"/>
                            <m:ObjectNumber number="{Currency}" emphasized="false"/>
                            <m:ObjectNumber number="{= ${Status} === 1 ? 'Validated' : ${Status} === 3 ? 'To be validated' : 'Obsolete'}" emphasized="false"/>
                            </m:VBox>
                    </m:HBox>
                    
					</m:FlexBox>
				</headerContent>

		<sections>
			<ObjectPageSection title="Product Details" titleUppercase="false">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<form:SimpleForm
								maxContainerCols="2"
								editable="false"
								layout="ResponsiveGridLayout"
								labelSpanL="12"
								labelSpanM="12"
								emptySpanL="0"
								emptySpanM="0"
								columnsL="1"
								columnsM="1">
								<form:content>
									<m:Label text="Product ID"/>
									<m:Text text="{products>ProductId}"/>
									<m:Label text="Description"/>
									<m:Text text="{products>Description}"/>
									<m:Label text="Supplier"/>
									<m:Text text="{products>SupplierName}"/>
								</form:content>
							</form:SimpleForm>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
                		<footer>
                            <m:OverflowToolbar >
                                <m:ToolbarSpacer />
                                <!-- <m:OverflowToolbarButton tooltip="Add" text="Add" icon="sap-icon://add"/> -->
                                <m:Button text="Save" type="Emphasized"/>
                                <m:Button text="Cancel" type="Default"/>
                                <m:Button class="Edit" icon="sap-icon://edit"  text="Edit" />
                                <m:Button class="Delete" icon="sap-icon://delete"  text="Delete" type="Reject"/>                                
                            </m:OverflowToolbar>
		                </footer>
                        
	</ObjectPageLayout>

</mvc:View>