<mvc:View 
xmlns="sap.uxap" 
xmlns:m="sap.m" 
xmlns:f="sap.f" 
xmlns:core="sap.ui.core" 
xmlns:semantic="sap.f.semantic" 
xmlns:mvc="sap.ui.core.mvc" 
xmlns:form="sap.ui.layout.form" 
controllerName="be.ap.product.controller.Detail">

	<ObjectPageLayout 
        id="detailPage" 
        showTitleInHeaderContent="true" 
        alwaysShowContentHeader="false" 
        preserveHeaderStateOnScroll="false" 
        headerContentPinnable="false" 
        isChildPage="true" 
        upperCaseAnchorBar="false" 
        showFooter="true">  

				<headerTitle>
                    <ObjectPageHeader>
                    <m:Title text="Product details" wrapping="true" class="sapUiSmallMarginEnd" titleStyle="H3"/>
                    </ObjectPageHeader>
				</headerTitle>

				<headerContent>
					<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Stretch">
                    <m:HBox>
                    		<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
							    <m:Text text="{ProductId}"/>
					            <f:Avatar src="{i18n>url}" displaySize="XL" displayShape="Square" press="onPress" fallbackIcon="sap-icon://product"/>
                            </m:VBox>
                            <m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
                            <m:Title text="{Name}" wrapping="true" class="sapUiSmallMarginEnd" titleStyle="H3"/>
                            <m:Title text="{parts: [{path:'Price'},{path:'Currency'}],
                                            type: 'sap.ui.model.type.Currency',
                                            formatOptions: {showMeasure: false}}"
                                     wrapping="true" class="sapUiSmallMarginEnd" titleStyle="H4"/>
                            <m:ObjectAttribute text="{Currency}"/>
                            <m:ObjectNumber number=""/>
                            <m:ObjectStatus text="{= ${Status} === 1 ? 'Validated' : ${Status} === 3 ? 'To be validated' : 'Obsolete'}" 
                                            state="{= ${Status} === 1 ? 'Success' : ${Status} === 3 ? 'Warning' : 'Error'}"/>
                            </m:VBox>
                    </m:HBox>
					</m:FlexBox>
				</headerContent>

		<sections>
			<ObjectPageSection title="Product Details" titleUppercase="false">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
                        	<m:VBox class="sapUiSmallMargin">

							<form:SimpleForm id="form" labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false"> 
								<form:content>
                                    <m:Label text="Product ID" visible="true"/>
                                    <m:Input id="productID" value="{ProductId}" width="50%" class="sapUiSmallMarginBottom" visible="false"/>
									<m:Label text="Product Category"/>
                                        <!-- <m:Page>
                                            <m:content>
                                                <m:ComboBox id="selectCategory" items="{path: '/categories'}">
                                                <core:Item text="{Name}"/></m:ComboBox>
                                           </m:content>
                                        </m:Page> -->
                                    <m:Input id="category" value="{Category}" width="50%" class="sapUiSmallMarginBottom" enabled="false"/>
									<m:Label text="Supplier ID"/>
									 <m:Input id="supplier" value="{SupplierId}" width="50%" class="sapUiSmallMarginBottom" enabled="false"/>
									<m:Label text="Product Name"/>
                                    <m:Input id="name" value="{Name}" width="100%" fieldWidth="200px" class="sapUiSmallMarginBottom" enabled="false"/>
                                    <m:Label text="Product Description"/>
									<m:TextArea id="description" value="{Description}" growing="false" height="70px" width="100%" enabled="false"/>
                                    <m:Label text="Price"/>
                                    <m:Input id="price" value="{Price}" description="{Currency}" fieldWidth="50%" class="sapUiSmallMarginBottom" enabled="false"/>
                                    <m:Label text="Unit Of Measure"/>
									<m:Input id="uom" value="{Uom}" width="50%" class="sapUiSmallMarginBottom" enabled="false"/>
                                    <m:Label text="Weight"/>
                                    <m:HBox>
                                    <m:Input id="weight" value="{Weight}" width="100%" class="sapUiSmallMarginBottom" enabled="false"/>
                                    <m:SegmentedButton id="weightButton" selectionChange="onSelectionChange" enabled="false">
                                        <m:items>
                                            <m:SegmentedButtonItem text="Kilograms"/>
                                            <m:SegmentedButtonItem text="Grams"/>
                                        </m:items>
                                    </m:SegmentedButton>
                                    </m:HBox>
								</form:content>
							</form:SimpleForm>

                            <form:SimpleForm labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false" title="Dimensions">

                                        <form:content>
                                            <m:Label text="Width"/>
                                            <m:Input id="width" value="{Width}" width="20%" class="sapUiSmallMarginBottom" enabled="false"/>
                                            <m:Label text="Depth"/>
                                            <m:Input id="depth" value="{Depth}" width="20%" class="sapUiSmallMarginBottom" enabled="false"/>
                                            <m:Label text="Height"/>
                                            <m:Input id="height" value="{Height}" width="20%" class="sapUiSmallMarginBottom" enabled="false"/>
                                            <m:Label text="Unit"/>
                                            <m:Input id="unit" value="{DimUnit}" width="15%" class="sapUiSmallMarginBottom" enabled="false"/>
                                        </form:content>
                            </form:SimpleForm>
                            	</m:VBox>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
                		<footer>
                            <m:OverflowToolbar>
                                <m:ToolbarSpacer/>
                                <m:Button id="new" class="New" icon="sap-icon://add"  text="New" type="Transparent" press="handleNewPress"/>
                                <m:Button id="saveNew" text="Save" type="Emphasized" press="handleSavePressNew" visible="false"/>
                                <m:Button id="saveEdit" text="Save" type="Emphasized" press="handleSavePressEdit" visible="false"/>
                                <m:Button id="cancel" text="Cancel" type="Default" press="handleCancelPress" visible="false"/>
                                <m:Button id="edit" class="Edit" icon="sap-icon://edit" text="Edit"  press="handleEditPress"/>
                                <m:Button id="delete" class="Delete" icon="sap-icon://delete" text="Delete" type="Reject" press="handleDeletePress"/>                                
                            </m:OverflowToolbar>
		                </footer>
                        
	</ObjectPageLayout>
</mvc:View>