<mvc:View
	controllerName="be.ap.product.controller.Master"
	xmlns="sap.m"
    xmlns:f="sap.f"
	xmlns:semantic="sap.f.semantic"
	xmlns:mvc="sap.ui.core.mvc">

    <f:DynamicPage 
        id="masterPage" 		
        preserveHeaderStateOnScroll="true"
        toggleHeaderOnTitleClick="false"
        showFooter="true">

        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                <Toolbar style="Clear">
                    <Title 
                           id="masterPageTitle"
				           text="{masterView>/title}"
				           level="H2"
                           textAlign="Center"/>
                           </Toolbar>
                </f:heading>
                </f:DynamicPageTitle>
        </f:title>

        <f:content>
			<List
				id="list"
				width="auto"
				class="sapFDynamicPageAlignContent"
				items="{
					path: '/ProductSet',
					sorter: {
						path: 'ProductId',
						descending: true
					},
					groupHeaderFactory: '.createGroupHeader'
				}"
				busyIndicatorDelay="{masterView>/delay}"
				noDataText="{masterView>/noDataText}"
				mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}"
				growing="true"
				growingScrollToLoad="true"
				updateFinished=".onUpdateFinished"
				selectionChange=".onSelectionChange">
				<infoToolbar>
					<Toolbar
						active="true"
						id="filterBar"
						visible="{masterView>/isFilterBarVisible}"
						press=".onOpenViewSettings">
						<Title
							id="filterBarLabel"
							text="{masterView>/filterBarLabel}"
							level="H3"/>
					</Toolbar>
				</infoToolbar>
				<headerToolbar>
					<OverflowToolbar>
						<SearchField
							id="searchField"
                            placeholder="Search by name or product id"
							showRefreshButton="true"
							tooltip="{i18n>masterSearchTooltip}"
                            width="100%"
							search=".onSearch"
                            enableSuggestions="true" 
                                     suggest="onSuggest"
                                     suggestionItems="{
                                        path: 'masterView>/Name'
                                    }">
                            <SuggestionItem text="{masterView>Name}" key="{masterView>Name}"/>
						</SearchField>
						<ToolbarSpacer/>
					</OverflowToolbar>
				</headerToolbar>
				<items>
					<ObjectListItem
                        id="listA"
						type="Active"
						press=".onSelectionChange"
						title="{Name}"
                        number="{
                            parts:[{path:'Price'},{path:'Currency'}],
                            type: 'sap.ui.model.type.Currency',
                            formatOptions: {showMeasure: false}
                        }"
						numberUnit="{Currency}">
                        <firstStatus>
                            <ObjectStatus
                            text="{= ${Status} === 1 ? 'Validated' : ${Status} === 3 ? 'To be validated' : 'Obsolete'}"
                            state="{= ${Status} === 1 ? 'Success' : ${Status} === 3 ? 'Warning' : 'Error'}"/>
                        </firstStatus>
                        <ObjectAttribute text="{Category}"/>
					</ObjectListItem>
				</items>
			</List>
        </f:content>

        		<f:footer>
			        <OverflowToolbar >
                        <ToolbarSpacer/>
                            <Button class="New" icon="sap-icon://add"  text="New" type="Transparent" press="handleNewPress"/>
			        </OverflowToolbar>
		        </f:footer>

         </f:DynamicPage>
</mvc:View>